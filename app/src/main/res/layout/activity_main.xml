<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.crib.counter.MainActivity"
    android:background="@drawable/background"
    >

    <CheckBox
        android:id="@+id/Lgrand2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Grand1"
        android:layout_toStartOf="@+id/Grand2"
        android:buttonTint="#ffffff"
        android:gravity="right|center_vertical"
        android:layoutDirection="rtl"
        android:text="LGrand"
        android:textColor="#ff0000" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="68dp"
        android:layout_toStartOf="@+id/add"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:textColorHint="#ffffff"
        android:textColor="#ffffff"
        android:backgroundTint="#ffffff"
        android:inputType="numberSigned" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText1"
        android:layout_toEndOf="@+id/add"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:backgroundTint="#ffffff"
        android:inputType="numberSigned" />

    <Button
        android:id="@+id/add"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/sub"
        android:layout_centerHorizontal="true"
        android:text="Add"
        android:textColor="#149601" />


    <TextView
        android:id="@+id/name1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/editText1"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|center_horizontal"
        android:text="TextView"
        android:textColor="#05a4c4"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/name2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editText2"
        android:gravity="center_vertical|center_horizontal"
        android:text="TextView"
        android:textColor="#ff0000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/editText1"
        android:layout_below="@+id/name1"
        android:gravity="center_vertical|center_horizontal"
        android:text="TEAM1"
        android:textColor="#05a4c4"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignStart="@+id/editText2"
        android:layout_below="@+id/name1"
        android:gravity="center_vertical|center_horizontal"
        android:text="TEAM2"
        android:textColor="#ff0000"
        android:textSize="20dp" />

    <Button
        android:id="@+id/Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText2"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="-68dp"
        android:text="Reset" />

    <Button
        android:id="@+id/sub"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText1"
        android:layout_below="@+id/editText1"
        android:layout_marginTop="-68dp"
        android:text="Subtrack"
        android:textColor="#ff0000" />

    <ListView
        android:id="@+id/show"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView1"
        android:visibility="visible" />

    <CheckBox
        android:id="@+id/Grand1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/onetwo1"
        android:layout_alignStart="@+id/editText1"
        android:buttonTint="#ffffff"
        android:gravity="left|center_vertical"
        android:text="Grand"
        android:textColor="#05a4c4" />

    <CheckBox
        android:id="@+id/Grand2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editText2"
        android:layout_alignTop="@+id/Grand1"
        android:buttonTint="#ffffff"
        android:gravity="right|center_vertical"
        android:layoutDirection="rtl"
        android:text="Grand"
        android:textColor="#ff0000" />

    <CheckBox
        android:id="@+id/Tichu1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Grand1"
        android:layout_alignStart="@+id/editText1"
        android:buttonTint="#ffffff"
        android:gravity="left|center_vertical"
        android:text="Tichu"
        android:textColor="#05a4c4" />

    <CheckBox
        android:id="@+id/Tichu2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Grand1"
        android:layout_alignEnd="@+id/editText2"
        android:buttonTint="#ffffff"
        android:gravity="right|center_vertical"
        android:layoutDirection="rtl"
        android:text="Tichu"
        android:textColor="#ff0000" />

    <CheckBox
        android:id="@+id/Ltichu1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Grand1"
        android:layout_toEndOf="@+id/Grand1"
        android:buttonTint="#ffffff"
        android:gravity="left|center_vertical"
        android:text="LTichu"
        android:textColor="#05a4c4" />

    <CheckBox
        android:id="@+id/Lgrand1"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/Grand1"
        android:layout_toEndOf="@+id/Grand1"
        android:buttonTint="#ffffff"
        android:gravity="left|center_vertical"
        android:text="LGrand"
        android:textColor="#05a4c4" />

    <CheckBox
        android:id="@+id/Ltichu2"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Grand1"
        android:layout_toStartOf="@+id/Tichu2"
        android:buttonTint="#ffffff"
        android:gravity="right|center_vertical"
        android:layoutDirection="rtl"
        android:text="LTichu"
        android:textColor="#ff0000" />

    <CheckBox
        android:id="@+id/onetwo1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText1"
        android:layout_alignStart="@+id/editText1"
        android:buttonTint="#ffffff"
        android:gravity="left|center_vertical"
        android:text="1-2"
        android:textColor="#05a4c4"/>

    <CheckBox
        android:id="@+id/onetwo2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText1"
        android:layout_alignEnd="@+id/editText2"
        android:gravity="right|center_vertical"
        android:layoutDirection="rtl"
        android:buttonTint="#ffffff"
        android:text="1-2"
        android:textColor="#ff0000"/>


</RelativeLayout>